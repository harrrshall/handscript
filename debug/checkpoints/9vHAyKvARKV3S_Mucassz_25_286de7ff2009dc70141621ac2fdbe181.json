  "pages": [
    {
      "pageIndex": 0,
      "content": [
        {
          "type": "paragraph",
          "text": "Force acting in each arm = $F/4 = 398.08/4 = 99.52$"
        },
        {
          "type": "paragraph",
          "text": "BM = $0.6 \\times 100$"
        },
        {
          "type": "paragraph",
          "text": "M = $60 \\, \\text{N.m}$"
        },
        {
          "type": "diagram",
          "description": "A horizontal cantilever beam, 0.6m long, fixed on the left end. A downward force F = 100N is applied at the free right end."
        },
        {
          "type": "paragraph",
          "text": "M = $\\sigma I/y$"
        },
        {
          "type": "math",
          "latex": "60 = 15 \\times 10^6 \\times \\frac{\\pi}{4} a^2 b",
          "display": true
        },
        {
          "type": "paragraph",
          "text": "but $a=2b$"
        },
        {
          "type": "math",
          "latex": "60 = 15 \\times 10^6 \\times \\frac{\\pi}{4} \\times (2b)^2 b",
          "display": true
        },
        {
          "type": "math",
          "latex": "60 = \\frac{15 \\times 10^6 \\times 3.14 \\times 4 \\times b^3}{4}",
          "display": true
        },
        {
          "type": "math",
          "latex": "b = \\left( \\frac{4}{3.14 \\times 10^6} \\right)^{1/3}",
          "display": true
        },
        {
          "type": "math",
          "latex": "b = (1.273 \\times 10^{-6})^{1/3}",
          "display": true
        },
        {
          "type": "paragraph",
          "text": "= $0.01083 \\, \\text{m}$"
        },
        {
          "type": "paragraph",
          "text": "= $10.83 \\, \\text{mm}$"
        },
        {
          "type": "paragraph",
          "text": "So, $a = 2b = 2 \\times 10.83 = 21.675 \\, \\text{mm}$"
        },
        {
          "type": "paragraph",
          "text": "NT. 60"
        },
        {
          "type": "math",
          "latex": "W = \\frac{21.1 N}{60}",
          "display": true
        }
      ]
    }
  ]
