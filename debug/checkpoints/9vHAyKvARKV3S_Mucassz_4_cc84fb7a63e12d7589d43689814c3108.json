  "metadata": {
    "title": "Solution to Pin and Cotter Problem",
    "subject": "Strength of Materials",
    "documentType": "problem-set"
  },
  "pages": [
    {
      "pageIndex": 0,
      "content": [
        {
          "type": "paragraph",
          "text": "Solution: Given:"
        },
        {
          "type": "paragraph",
          "text": "tensile stress $(\\sigma_t)$ = $160 \\frac{N}{mm^2}$"
        },
        {
          "type": "paragraph",
          "text": "Shear stress $(\\tau)$ = $80 \\frac{N}{mm^2}$"
        },
        {
          "type": "paragraph",
          "text": "Load applied (P) = $80 KN = 80 \\times 10^3 N$"
        },
        {
          "type": "paragraph",
          "text": "No of Resitive area of pin = 2"
        },
        {
          "type": "paragraph",
          "text": "Area of pin = $\\frac{\\pi d^2}{4} \\times 2$"
        },
        {
          "type": "paragraph",
          "text": "$d$ is diameter of pin"
        },
        {
          "type": "paragraph",
          "text": "Area of cotter/spigot = $\\frac{\\pi D^2}{4}$, $D$ = diameter of spigot/cotter"
        },
        {
          "type": "math",
          "latex": "\\text{Tensile stress} = \\frac{P}{\\text{Area of cotter}}",
          "display": true
        },
        {
          "type": "paragraph",
          "text": "($\\sigma_t$)"
        },
        {
          "type": "math",
          "latex": "100 \\frac{N}{mm^2} = \\frac{80 \\times 10^3 N}{\\frac{\\pi D^2}{4}}",
          "display": true
        },
        {
          "type": "math",
          "latex": "D^2 = \\frac{80 \\times 4 \\times 10^3}{\\pi \\times 100} mm^2",
          "display": true
        },
        {
          "type": "math",
          "latex": "D^2 = \\frac{3200}{3.14} mm^2",
          "display": true
        },
        {
          "type": "math",
          "latex": "D^2 = 1019.10828 mm^2",
          "display": true
        },
        {
          "type": "math",
          "latex": "D = \\sqrt{1019.10828 mm^2} = 31.9234 mm",
          "display": true
        },
        {
          "type": "math",
          "latex": "\\tau = \\text{shear stress} = \\frac{P}{\\text{Resistive Area of pin}}",
          "display": true
        },
        {
          "type": "math",
          "latex": "80 \\frac{N}{mm^2} = \\frac{80 \\times 10^3 N}{\\frac{2 \\times \\pi d^2}{4}}",
          "display": true
        },
        {
          "type": "math",
          "latex": "d^2 = \\frac{2 \\times 10^3}{3.14} mm^2",
          "display": true
        },
        {
          "type": "math",
          "latex": "d = 25.23 mm",
          "display": true
        }
      ]
    }
  ]
