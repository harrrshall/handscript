{
    "functions": {
        "app/api/internal/process-batch/route.ts": {
            "maxDuration": 60
        },
        "app/api/jobs/[jobId]/finalize/route.ts": {
            "maxDuration": 60
        }
    },
    "crons": [
        {
            "path": "/api/cron/cleanup",
            "schedule": "0 * * * *"
        },
        {
            "path": "/api/cron/recovery",
            "schedule": "*/30 * * * *"
        }
    ]
}